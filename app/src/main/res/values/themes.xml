<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Trackyyy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material color system -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Enable edge-to-edge design -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Trackyyy.HeadlineLarge</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Trackyyy.HeadlineMedium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Trackyyy.HeadlineSmall</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Trackyyy.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Trackyyy.BodyMedium</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Trackyyy.TitleLarge</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Trackyyy.TitleMedium</item>
        <item name="textAppearanceButton">@style/TextAppearance.Trackyyy.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Trackyyy.LabelMedium</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Trackyyy.LabelSmall</item>
        
        <!-- Component styles -->
        <item name="bottomNavigationStyle">@style/Widget.Trackyyy.BottomNavigation</item>
        <item name="materialButtonStyle">@style/Widget.Trackyyy.Button</item>
        <item name="textInputStyle">@style/Widget.Trackyyy.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.Trackyyy.CardView</item>
        <item name="toolbarStyle">@style/Widget.Trackyyy.Toolbar</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Trackyyy.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Trackyyy.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Trackyyy.LargeComponent</item>
        
        <!-- Transitions and animations -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.App.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.Trackyyy.HeadlineLarge" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.HeadlineMedium" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.HeadlineSmall" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.TitleLarge" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.TitleMedium" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.TitleSmall" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.BodyMedium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.BodySmall" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.LabelLarge" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.LabelMedium" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.Trackyyy.LabelSmall" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <!-- Shape styles -->
    <style name="ShapeAppearance.Trackyyy.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Trackyyy.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <style name="ShapeAppearance.Trackyyy.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="Widget.Trackyyy.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/surface</item>
        <item name="titleTextAppearance">@style/TextAppearance.Trackyyy.TitleLarge</item>
    </style>
</resources>