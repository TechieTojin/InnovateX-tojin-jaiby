<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.Trackyyy.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/primary_variant</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Widget.Trackyyy.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_variant</item>
    </style>
    
    <style name="Widget.Trackyyy.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_variant</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.Trackyyy.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="rippleColor">@color/primary</item>
    </style>
    
    <style name="Widget.Trackyyy.CardView.Filled" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="rippleColor">@color/primary</item>
    </style>
    
    <style name="Widget.Trackyyy.CardView.Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="cardElevation">0dp</item>
        <item name="rippleColor">@color/primary</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="Widget.Trackyyy.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    
    <style name="Widget.Trackyyy.TextInputLayout.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxBackgroundColor">@color/ultra_light_gray</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- Bottom Navigation Styles -->
    <style name="Widget.Trackyyy.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemRippleColor">@color/primary_variant</item>
        <item name="elevation">4dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <!-- FAB Styles -->
    <style name="Widget.Trackyyy.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
        <item name="elevation">2dp</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/primary_variant</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Trackyyy.SmallComponent</item>
    </style>
    
    <style name="Widget.Trackyyy.FloatingActionButton.Mini" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
        <item name="elevation">2dp</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/primary_variant</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Trackyyy.SmallComponent</item>
    </style>
    
    <!-- Circle Image View Style -->
    <style name="ShapeAppearance.Trackyyy.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.Trackyyy.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/ultra_light_gray</item>
        <item name="chipStrokeColor">@color/card_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>
    
    <style name="Widget.Trackyyy.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/ultra_light_gray</item>
        <item name="chipStrokeColor">@color/card_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_check_circle</item>
        <item name="checkedIconTint">@color/primary</item>
    </style>
    
    <!-- Progress Indicator Styles -->
    <style name="Widget.Trackyyy.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackCornerRadius">8dp</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/light_gray</item>
    </style>
    
    <style name="Widget.Trackyyy.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">48dp</item>
        <item name="indicatorInset">4dp</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/light_gray</item>
    </style>
    
    <!-- No Action Bar Theme -->
    <style name="Theme.Trackyyy.NoActionBar" parent="Theme.Trackyyy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources> 